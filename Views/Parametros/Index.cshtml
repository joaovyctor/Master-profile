
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<section>
    <div>
        <table>
            <thead>
                <tr>
                    <th>Tipo</th>
                    <th>Valor</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var l in ViewBag.Email)
            {
                <tr>
                    <td>
                        @l.Tipo
                    </td>
                    <td>
                        @l.Valor
                    </td>
                    <td>
                        <a href="~/Parametros/Details/@l.Id" class="btn btn-primary">Visualizar</a>
                        <a href="" class="btn btn-success"> Editar</a>
                        <a href="" class="btn btn-success"> Excluir</a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</section>